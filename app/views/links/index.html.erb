

<% if current_user %>
      <h3><%= link_to "Sign Out", '/logout', method: :delete %></h3>
        <form id="link-create">
          <fieldset>
              <div class="url-field">
                    <label for="url">URL: </label>
                    <input id="link-url" type="text" name="URL"><br>
              </div>
              <div class="title-field">
                    <label for="title">Title:</label>
                    <input id="link-title" type="text" name="title"><br>
              </div>
              <div class="button-field">
                <button id="link-submit" type="submit" value="Add Link">Add Link</button>
              </div>
          </fieldset>
      </form>

      <div id="filter-box">
        <fieldset>
          <input type="text" id="input-field" onkeyup="filterLinks()" placeholder="Search your links...">
          <button value="Only Unread Links" onclick="filterRead()">Only Unread Links</button>
          <button value="Only Read Links" onclick="filterUnread()">Only Read Links</button>
        </fieldset>
      </div>


      <div id="links-table">
        <table id="the-table">
          <thead>
            <tr>
              <th>Link</th>
              <th>Title</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="tb-links">
            <tr>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>

<% else  %>
    <h3><%= link_to "Please login", "/login" %> <%= link_to "or sign up", new_user_path %></h3>
<% end %>